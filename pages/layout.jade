  body
    block link
      -var selected  = 'Main';

    -var menu = { 'Main': '/main', 'Explore': '/explore', 'Schema': '/schema', 'Security': '/security', 'Health': '/health', 'Logs': '/logs', 'Help': '/help'};
    -var icons = { 'Main': 'icon-home', 'Explore': 'fa fa-compass', 'Schema': 'fa fa-share-alt', 'Security': 'fa fa-users', 'Health': 'fa fa-line-chart', 'Logs': 'fa fa-cube', 'Help': 'fa fa-question'};
    // Side Navbar
    nav.side-navbar
      .side-navbar-wrapper
        // Sidebar Header
        .sidenav-header.d-flex.align-items-left.justify-content-left
          // User Info
          .sidenav-header-inner.text-left
            h2.h5
              img(src='../../img/harper.png', width='27', height='27')
              | HarperDB
          // Small Brand information, appears on minimized sidebar
          .sidenav-header-logo
            a.brand-small.text-center(href='/main')
              img(src='../../img/harper.png', width='37', height='37')
        // Sidebar Navigation Menus
        .main-menu
          ul#side-main-menu.side-menu.list-unstyled
             each val, key in menu
              if selected === key
                li.active
                 a(href=val, title=key)
                  i(class="#{icons[key]}")
                  | #{key}
              else
                li
                  a(href=val, title=key)
                    i(class="#{icons[key]}")
                    | #{key}
    .page
      // navbar
      header.header
        nav.navbar
          .container-fluid
            .navbar-holder.d-flex.align-items-center.justify-content-between
              .navbar-header
                a#toggle-btn.menu-btn(href='#')
                  i.icon-bars  
                a.navbar-brand(href='/main')
                  .brand-text.d-none.d-md-inline-block
                    span Hello_HDBlms 
              ul.nav-menu.list-unstyled.d-flex.flex-md-row.align-items-md-center
                li.nav-item.dropdown
                li.nav-item
                  a.nav-link.logout(href='/logout')
                    | LOGOUT
      // Counts Section
      block content    
      footer.main-footer
        .container-fluid
          .row
            .col-sm-6
              p HarperDB Studio Â© 2018
